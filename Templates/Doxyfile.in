# This is the basic Doxygen Configuration File we use
DOXYFILE_ENCODING = UTF-8

PROJECT_NUMBER = @PROJECT_VERSION@
PROJECT_BRIEF = @PROJECT_DESCRIPTION@
PROJECT_NAME = @PROJECT_NAME@

OUTPUT_LANGUAGE = English
INPUT_ENCODING = UTF-8

OUTPUT_DIRECTORY = @PROJECT_BINARY_DIR@/docs
INPUT = @PROJECT_SOURCE_DIR@/docs @PROJECT_SOURCE_DIR@/include @PROJECT_SOURCE_DIR@/src

CLANG_ASSISTED_PARSING = YES
CLANG_DATABASE_PATH = @PROJECT_BINARY_DIR@

USE_MDFILE_AS_MAINPAGE = @PROJECT_SOURCE_DIR@/docs/index.md
FILE_PATTERNS = *.hpp *.cxx *.md

CLASS_DIAGRAMS = NO
CLASS_GRAPH = NO

GENERATE_TAGFILE = @PROJECT_NAME@.tag
GENERATE_TREEVIEW = YES
GENERATE_LATEX = NO
GENERATE_XML = YES

RECURSIVE = YES

SHOW_USED_FILES = NO
SHOW_FILES = NO

STRIP_FROM_PATH = @PROJECT_SOURCE_DIR@
EXCLUDE_SYMBOLS = *::detail::* *::impl::*

TAB_SIZE = 2

# C++ Specific Settings
EXTRACT_LOCAL_CLASSES = NO
BRIEF_MEMBER_DESC = NO
VERBATIM_HEADERS = NO
REPEAT_BRIEF = NO

ALIASES += "concept=\xrefitem concept \"Concept\" \"Concepts\""
